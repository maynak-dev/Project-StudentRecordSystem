@model List<StudentRecordSystem.Models.Student>
@{
    ViewData["Title"] = "Student List";
}
<h2>Student List</h2>
<a class="btn btn-primary mb-3" href="/Students/Create">Add Student</a>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>GPA</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var s in Model)
        {
            <tr>
                <td>@s.Name</td>
                <td>@s.Email</td>
                <td>@s.GPA</td>
                <td>
                    <a class="btn btn-warning btn-sm" href="/Students/Edit/@s.Id">Edit</a>
                    <a class="btn btn-danger btn-sm" href="/Students/Delete/@s.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
